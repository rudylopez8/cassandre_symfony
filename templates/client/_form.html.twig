{{ form_start(form) }}

    {# Erreurs globales du formulaire #}
    {% if form_errors(form) %}
        <div class="alert alert-danger">
            {{ form_errors(form) }}
        </div>
    {% endif %}

    {{ form_row(form.nom) }}
    {{ form_row(form.mail) }}
    {{ form_row(form.save) }}

{{ form_end(form) }}

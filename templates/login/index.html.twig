{% extends 'base.html.twig' %}

{% block title %}Connexion – Cassandre Communication{% endblock %}

{% block body %}
    <div class="login-card card shadow-sm">
        <div class="card-body text-center">
            <i class="fa-solid fa-shield-halved fa-3x mb-3" style="color:var(--bs-primary);"></i>
            <h4 class="card-title mb-4">Connexion</h4>
            <form>
                <div class="mb-3 text-start">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" class="form-control" placeholder="vous@exemple.com">
                </div>
                <div class="mb-3 text-start">
                    <label for="password" class="form-label">Mot de passe</label>
                    <input type="password" id="password" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary w-100">Se connecter</button>
            </form>
            <p class="mt-3"><a href="#">Mot de passe oublié ?</a></p>
        </div>
    </div>
{% endblock %}